pipeline {
    agent any

    environment {
        // Define these before they're used
        SERVICE_NAME = "config-server"  // Must match your GitHub repo name
        ORGANIZATION_NAME = "miyembro"  // Defined in Jenkins UI but can be set here too
        DOCKERHUB_USERNAME = "arjayfuentes24"  // Defined in Jenkins UI but can be set here too
        IMAGE_NAME = "config-server-miyembro"
        IMAGE_TAG = "${IMAGE_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'GitHub',
                        url: "https://github.com/${ORGANIZATION_NAME}/${SERVICE_NAME}"
                    ]]
                ])
            }
        }
        // ... rest of your pipeline
    }
}