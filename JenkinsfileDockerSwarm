pipeline {
    agent any

    environment {
        SERVICE_NAME = "config-server"
        IMAGE_NAME = "config-server-miyembro"
        IMAGE_TAG = "${IMAGE_NAME}:${BUILD_NUMBER}"
        REPOSITORY_TAG = "${DOCKERHUB_USERNAME}/${IMAGE_TAG}"
    }

    stages {
        stage('Build and Push Image') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'miyembro-docker-token',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_TOKEN'
                    )]) {
                        // Secure Docker login using the token
                        sh '''
                            docker login -u "$DOCKER_USER" -p "$DOCKER_TOKEN"

                            # Build and tag the image
                            docker build -t ${IMAGE_NAME} .
                            docker tag ${IMAGE_NAME} ${REPOSITORY_TAG}
                            docker tag ${IMAGE_NAME} ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest

                            # Push the images
                            docker push ${REPOSITORY_TAG}
                            docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to Swarm') {
            steps {
                script {
                    sh '''
                        docker stack deploy \
                          -c ${WORKSPACE}/docker-compose.yml \
                          ${SERVICE_NAME} \
                          --with-registry-auth
                    '''
                }
            }
        }
    }
}