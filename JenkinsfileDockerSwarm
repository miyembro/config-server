pipeline {
    agent any
    options {
        skipDefaultCheckout true  // Prevents automatic SCM checkout
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([  // Explicit checkout
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/miyembro/config-server',
                        credentialsId: '' // Add credential ID if private repo
                    ]]
                ])
            }
        }
        // Rest of your stages...
    }
}