pipeline {
    agent any

    environment {
        SERVICE_NAME = "config-server"
        IMAGE_NAME = "config-server-miyembro"
        IMAGE_TAG = "${IMAGE_NAME}:${BUILD_NUMBER}"
        REPOSITORY_TAG = "${DOCKERHUB_USERNAME}/${IMAGE_TAG}"
        // This creates 3 variables automatically:
        // DOCKER_HUB_CREDS_USR = username
        // DOCKER_HUB_CREDS_PSW = password/token
        // DOCKER_HUB_CREDS = "username:password"
        DOCKER_HUB_CREDS = credentials('miyembro-docker-token')
    }

    stages {
        stage('Build and Push Image') {
            steps {
                script {
                    // LOGIN USING YOUR TOKEN (exactly as you wanted)
                    sh """
                        echo "$DOCKER_HUB_CREDS_PSW" | \
                        docker login -u "$DOCKER_HUB_CREDS_USR" --password-stdin
                    """

                    // BUILD AND PUSH
                    sh "docker build -t ${IMAGE_NAME} ."
                    sh "docker tag ${IMAGE_NAME} ${REPOSITORY_TAG}"
                    sh "docker tag ${IMAGE_NAME} ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest"
                    sh "docker push ${REPOSITORY_TAG}"
                    sh "docker push ${DOCKERHUB_USERNAME}/${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Deploy to Swarm') {
            steps {
                script {
                    // DEPLOY WITH REGISTRY AUTH
                    sh """
                        docker stack deploy \
                        -c ${WORKSPACE}/docker-compose.yml \
                        ${SERVICE_NAME} \
                        --with-registry-auth
                    """
                }
            }
        }
    }
}